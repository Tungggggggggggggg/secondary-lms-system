@startuml usecase-overall
title Use Case - Tổng thể hệ thống EduVerse

left to right direction
skinparam packageStyle rectangle

actor "Khách" as Guest
actor "Người dùng" as User
actor "Học sinh" as Student
actor "Giáo viên" as Teacher
actor "Phụ huynh" as Parent
actor "Quản trị viên" as Admin
actor "Bộ lập lịch" as Scheduler

Student --|> User
Teacher --|> User
Parent --|> User
Admin --|> User

rectangle "EduVerse" {
  usecase "Xác thực tài khoản" as UC_Auth
  usecase "Đặt lại mật khẩu" as UC_Reset

  usecase "Học tập theo bài học/học liệu" as UC_Learn
  usecase "Tham gia lớp học" as UC_JoinClass

  usecase "Thực hiện bài tập/kiểm tra" as UC_DoAssessment
  usecase "Nộp bài" as UC_Submit

  usecase "Trao đổi (Chat)" as UC_Chat
  usecase "Nhận/Xem thông báo" as UC_Notif

  usecase "Hỏi AI Tutor" as UC_Tutor

  usecase "Quản lý lớp học" as UC_ManageClass
  usecase "Quản lý học liệu/bài học" as UC_ManageContent
  usecase "Tạo & giao bài tập/kiểm tra" as UC_CreateAssign
  usecase "Chấm điểm & phản hồi" as UC_Grade
  usecase "Giám sát thi" as UC_Monitor
  usecase "Tóm tắt chống gian lận (AI)" as UC_AntiCheatAI

  usecase "Thiết lập liên kết phụ huynh - học sinh" as UC_ParentLink
  usecase "Theo dõi học tập của con" as UC_ParentTrack
  usecase "Tạo & gửi tóm tắt học tập định kỳ" as UC_Weekly

  usecase "Quản trị người dùng" as UC_AdminUsers
  usecase "Quản trị tổ chức" as UC_AdminOrgs
  usecase "Cấu hình hệ thống" as UC_AdminSettings
  usecase "Theo dõi nhật ký hệ thống" as UC_AdminAudit
  usecase "Xem thống kê hệ thống" as UC_AdminStats
}

Guest --> UC_Auth
Guest --> UC_Reset

Student --> UC_JoinClass
Student --> UC_Learn
Student --> UC_DoAssessment
Student --> UC_Submit
Student --> UC_Tutor

User --> UC_Chat
User --> UC_Notif

Teacher --> UC_ManageClass
Teacher --> UC_ManageContent
Teacher --> UC_CreateAssign
Teacher --> UC_Grade
Teacher --> UC_Monitor
Teacher --> UC_AntiCheatAI

Parent --> UC_ParentLink
Parent --> UC_ParentTrack
Parent --> UC_Chat
Parent --> UC_Notif

Scheduler --> UC_Weekly
Parent --> UC_Weekly

Admin --> UC_AdminUsers
Admin --> UC_AdminOrgs
Admin --> UC_AdminSettings
Admin --> UC_AdminAudit
Admin --> UC_AdminStats

UC_Reset ..> UC_Auth : <<extend>>
UC_DoAssessment ..> UC_Submit : <<include>>
UC_AntiCheatAI ..> UC_Monitor : <<extend>>

@enduml