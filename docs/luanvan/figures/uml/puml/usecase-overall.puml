@startuml usecase-overall
title Use Case - Tổng thể hệ thống EduVerse

left to right direction
skinparam packageStyle rectangle

actor "Khách" as Guest
actor "Học sinh" as Student
actor "Giáo viên" as Teacher
actor "Phụ huynh" as Parent
actor "Quản trị viên" as Admin

rectangle "EduVerse" {
  usecase "Đăng ký / Đăng nhập" as UC_Auth
  usecase "Quên/Đặt lại mật khẩu" as UC_Reset

  usecase "Tham gia lớp" as UC_JoinClass
  usecase "Xem bài học/học liệu" as UC_ViewLessons

  usecase "Làm bài (Quiz/Essay)" as UC_DoAssignment
  usecase "Nộp bài" as UC_Submit

  usecase "Nhận thông báo" as UC_Notifications
  usecase "Chat" as UC_Chat

  usecase "Hỏi AI Tutor" as UC_Tutor

  usecase "Tạo & quản lý lớp học" as UC_ManageClass
  usecase "Quản lý khóa học/bài học" as UC_ManageCourse
  usecase "Tạo bài tập/đề kiểm tra" as UC_CreateAssignment
  usecase "Theo dõi tiến độ/kết quả" as UC_TrackProgress

  usecase "Giám sát thi (event log)" as UC_ExamMonitoring
  usecase "Tổng hợp chống gian lận (AI)" as UC_AntiCheatSummary

  usecase "Liên kết phụ huynh - học sinh" as UC_ParentLink
  usecase "Xem tiến độ/kết quả của con" as UC_ParentView
  usecase "Nhận tóm tắt định kỳ" as UC_WeeklySummary

  usecase "Quản trị người dùng" as UC_AdminUsers
  usecase "Cấu hình hệ thống" as UC_AdminSettings
  usecase "Xem nhật ký hoạt động" as UC_AdminAudit
}

Guest --> UC_Auth
Guest --> UC_Reset

Student --> UC_JoinClass
Student --> UC_ViewLessons
Student --> UC_DoAssignment
Student --> UC_Submit
Student --> UC_Notifications
Student --> UC_Chat
Student --> UC_Tutor
Student --> UC_ExamMonitoring

Teacher --> UC_ManageClass
Teacher --> UC_ManageCourse
Teacher --> UC_CreateAssignment
Teacher --> UC_TrackProgress
Teacher --> UC_Notifications
Teacher --> UC_Chat
Teacher --> UC_ExamMonitoring
Teacher --> UC_AntiCheatSummary

Parent --> UC_ParentLink
Parent --> UC_ParentView
Parent --> UC_WeeklySummary
Parent --> UC_Chat

Admin --> UC_AdminUsers
Admin --> UC_AdminSettings
Admin --> UC_AdminAudit

UC_AntiCheatSummary ..> UC_ExamMonitoring : <<include>>
UC_Reset ..> UC_Auth : <<extend>>

@enduml
