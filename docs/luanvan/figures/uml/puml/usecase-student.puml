@startuml usecase-student
left to right direction
title Use Case chi tiết - Học sinh

actor "Học sinh" as Student

rectangle "EduVerse - Student Portal" {
  usecase "Xác thực tài khoản" as UC_Auth
  usecase "Đặt lại mật khẩu" as UC_Reset

  usecase "Tham gia lớp học" as UC_JoinClass
  usecase "Học theo bài học/học liệu" as UC_Learn

  usecase "Làm bài trắc nghiệm" as UC_DoQuiz
  usecase "Bắt đầu phiên làm bài" as UC_StartAttempt
  usecase "Ghi nhận sự kiện giám sát trong khi làm bài" as UC_RecordEvents
  usecase "Nộp bài trắc nghiệm" as UC_SubmitQuiz

  usecase "Làm bài tự luận" as UC_DoEssay
  usecase "Nộp bài tự luận" as UC_SubmitEssay
  usecase "Đính kèm tệp khi nộp bài" as UC_AttachFiles

  usecase "Hỏi AI Tutor" as UC_Tutor
  usecase "Nhận/Xem thông báo" as UC_Notif
  usecase "Trao đổi (Chat)" as UC_Chat

  usecase "Quản lý liên kết phụ huynh" as UC_ParentLink
  usecase "Duyệt yêu cầu liên kết" as UC_ReviewLinkRequests
  usecase "Tạo mã mời phụ huynh" as UC_CreateInvite
}

Student --> UC_Auth
Student --> UC_Reset
Student --> UC_JoinClass
Student --> UC_Learn
Student --> UC_DoQuiz
Student --> UC_DoEssay
Student --> UC_Tutor
Student --> UC_Notif
Student --> UC_Chat
Student --> UC_ParentLink

UC_Reset ..> UC_Auth : <<extend>>

UC_DoQuiz ..> UC_StartAttempt : <<include>>
UC_DoQuiz ..> UC_RecordEvents : <<include>>
UC_DoQuiz ..> UC_SubmitQuiz : <<include>>

UC_DoEssay ..> UC_SubmitEssay : <<include>>
UC_AttachFiles ..> UC_SubmitEssay : <<extend>>

UC_ParentLink <|-- UC_ReviewLinkRequests
UC_ParentLink <|-- UC_CreateInvite

@enduml